<div class="container-fluid project-form">
  <div class="row">
    <%= form_for [:admin, @project] do |f| %>

    <div class="col-md-3 col-lg-2">
      <section>
        <h4>Controls</h4>
        <%= f.submit class: 'btn btn-default', value: 'Save' %>
        <%= if @project.id then link_to "Preview", admin_project_path(@project), class: 'btn btn-warning', target: '_blank' end %>
      </section>
    </div>
    <div class="col-md-9 col-lg-10">

      <div class="input-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="input-group">  
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', rows: 5, cols: 60 %>
      </div>

      <div class="input-group">
        <%= f.label :thumbnail %>
        <div class="row">
          <div class="col-sm-3 col-lg-2">
            <%= image_tag @project.thumbnail.url(:thumb), class: 'thumbnail' %>
          </div>
          <div class="col-sm-8 col-lg-9">
            <%= f.file_field :thumbnail %>
          </div>
        </div>
      </div>

      <div class="input-group">
        <%= f.label :hero %>
        <div class="row">
          <div class="col-sm-3 col-lg-2">
            <%= image_tag @project.hero.url(:thumb), class: 'thumbnail' %>
          </div>
          <div class="col-sm-8 col-lg-9">
            <%= f.file_field :hero %>
          </div>
        </div>
      </div>

      <div class="input-group">
        <%= f.label :details %>
        <div class="row">
          <div class="col-sm-3 col-lg-2">
            <% @project.project_details.each do |detail| %>
            <div class="project-detail">
              <p><%= detail.description %></p>
              <%= image_tag detail.image.url, class: 'thumbnail' %>
            </div>
            <% end %>
          </div>
          <div class="col-sm-8 col-lg-9">
            <%= file_field_tag "images[]", type: :file, multiple: true %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>