<div class="container-fluid project-form">
	<div class="row">
		<%= form_for [:admin, @project] do |f| %>

		<div class="col-md-3 col-lg-2">
			<section>
				<h4>Controls</h4>
				<%= f.submit class: 'btn btn-default', value: 'Save' %>
				<%= if @project.id then link_to "Preview", project_path(@project), class: 'btn btn-warning', target: '_blank' end %>
			</section>
		</div>
		<div class="col-md-9 col-lg-10">

			<div class="input-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control' %>
			</div>

			<div class="input-group">  
				<%= f.label :description %>
				<%= f.text_area :description, class: 'form-control', rows: 5, cols: 60 %>
			</div>

			<div class="input-group">
				<%= f.label :thumbnail %>
				<div class="row">
					<div class="col-sm-3 col-lg-2">
						<%= image_tag @project.thumbnail.url(:thumb), class: 'thumbnail' %>
					</div>
					<div class="col-sm-8 col-lg-9">
						<%= f.file_field :thumbnail %>
					</div>
				</div>
				<span>Shadow?</span>&nbsp;<%= f.check_box :shadow %>
			</div>

			<div class="input-group">
				<%= f.label :hero %>
				<div class="row">
					<div class="col-sm-3 col-lg-2">
						<%= image_tag @project.hero.url(:thumb), class: 'thumbnail' %>
					</div>
					<div class="col-sm-8 col-lg-9">
						<%= f.file_field :hero %>
					</div>
				</div>
			</div>

			<div class="input-group" id="details">
				<%= f.label :details %>

				<div class="row">
					<div class="col-lg-12">
						<section>
							<%= file_field_tag "images[]", type: :file, multiple: true %>
						</section>
					</div>
				</div>

				<section>
					<span>Bottom padding?</span>&nbsp;<%= f.check_box :bottom_padding %>
				</section>

				<% @project.project_details.each do |detail| %>
				<div class="row">
					<div class="col-xs-5">
						<div class="project-detail">
							<%= image_tag detail.image.url, class: 'thumbnail' %>
							<p><%= detail.description %></p>
						</div>
					</div>
					<div class="col-xs-7">
						<%= link_to "Delete", admin_project_detail_path(detail), method: 'delete', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
						<%= link_to "Up", admin_project_detail_path(detail, move: 'up'), method: 'put', class: 'btn btn-default' %>
						<%= link_to "Down", admin_project_detail_path(detail, move: 'down'), method: 'put', class: 'btn btn-default' %>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<% end %>
	</div>
</div>