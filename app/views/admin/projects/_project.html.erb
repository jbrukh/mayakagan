<div class="row project">
  <div class="col-xs-12 col-sm-3 col-md-3">
    <%= link_to image_tag(project.thumbnail.url(:thumb), class: 'thumbnail'), edit_admin_project_path(project) %>
  </div>
  <div class="col-xs-12 col-sm-5 col-md-6">
    <h1><%= project.title %></h1>
    <p><%= project.description %></p>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-3">
    <%= link_to "Delete", admin_project_path(project), method: 'delete', data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    <%= link_to "Up", admin_move_project_path(project, move: 'up'), method: 'put', class: 'btn btn-default' %>
    <%= link_to "Down", admin_move_project_path(project, move: 'down'), method: 'put', class: 'btn btn-default' %>
  </div>
</div>